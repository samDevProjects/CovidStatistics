{% extends 'base.html.twig' %}

{% block title %}Departement index{% endblock %}

{% block body %}


<h3 class="m-b-10 page-title">Depatments</h3>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                    <h5>Departement index</h5>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                                <th>Department_name</th>
                                <th>Department_number</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for departement in departements %}
                            <tr>
                                <td>{{ departement.id }}</td>
                                <td>{{ departement.departmentName }}</td>
                                <td>{{ departement.departementNumber }}</td>
                                <td>
                                    <a href="{{ path('show_table_detail', {'id': departement.id}) }}">show</a>
                                    <a href="{{ path('departement_edit', {'id': departement.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {{ knp_pagination_render(departements) }}
                <a class="btn btn-info" href="{{ path('departement_new') }}">Create new</a>
            </div>
        </div>
    </div>
</div>



{% endblock %}
